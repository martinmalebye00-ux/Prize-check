  <script>
    document.getElementById('year').textContent = new Date().getFullYear();
    function analyze(){
      const msg = document.getElementById('msg').value.trim().toLowerCase();
      const r = document.getElementById('result');
      r.style.display = 'block';
      if(!msg){ r.textContent = 'Enter a message or link to check.'; return false; }
      // Simple heuristic checks (add server-side checks for production)
      const indicators = [];
      if(msg.includes('congrat') || msg.includes('you won') || msg.includes('prize')) indicators.push('Mentions prize/winning — verify sender.');
      if(msg.includes('click') || msg.includes('http') || msg.includes('www.')) indicators.push('Contains a link — do not click if sender unknown.');
      if(msg.includes('fee') || msg.includes('processing') || msg.includes('pay')) indicators.push('Requests payment — likely scam.');
      if(msg.includes('urgent') || msg.includes('act now')) indicators.push('Pressure language — possible scam.');

      if(indicators.length===0){ r.innerHTML = '<strong>Likely safe</strong> — but still verify sender and never give banking info.'; }
      else { r.innerHTML = '<strong>Warning</strong>:<br>' + indicators.map(i=>'• '+i).join('<br>') + '<br><br>Recommended next step: do not click links, block sender, and check with official company channels.'; }
      return false;
    }

    function signup(){
      const email = document.getElementById('email').value.trim();
      if(!email || !/@/.test(email)){ alert('Please enter a valid email'); return false; }
      // In production: send to your email marketing provider API
      alert('Thanks — newsletter signup simulated. Implement actual signup with MailerLite/Mailchimp API.');
      document.getElementById('email').value = '';
      return false;
    }
  </script>
